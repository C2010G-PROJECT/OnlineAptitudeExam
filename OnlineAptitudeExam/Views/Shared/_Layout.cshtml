<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">

</head>

<body>

    <nav class="navbar navbar-expand-lg accordion-collapse" style="width: 100%; background-color: #0226d9; position: fixed; z-index:999999;top: 0" ;>
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Content/images/logo.svg" />
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-link">
                        @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "nav_home_header" })
                    </li>
                    <li class="nav-link">
                        @Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { id = "nav_about_header" })
                    </li>
                    <li class="nav-link">
                        @Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { id = "nav_contact_header" })
                    </li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
    </div>


    <section class="footer">
        <div class="social">
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-snapchat"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-facebook-f"></i></a>
        </div>

        <ul class="list">
            <li>
                @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "nav_home_header" })
            </li>

            <li>
                @Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { id = "nav_about_header" })
            </li>

            <li>
                @Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { id = "nav_contact_header" })
            </li>
        </ul>

    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/ajax.helper.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
