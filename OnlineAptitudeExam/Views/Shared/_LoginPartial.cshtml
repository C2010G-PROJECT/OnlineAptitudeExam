@using Microsoft.AspNet.Identity
@using OnlineAptitudeExam.Models;

@{
    Account user= HttpContext.Current.Session["UserInfo"] as Account;
}
@if (Session["UserInfo"] != null)

{
    using (Html.BeginForm("LogOff", "Auth", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="nav-link">

                @Html.ActionLink(user.fullname.ToString() , "Index", "Manage", routeValues: null, htmlAttributes: new { style = "text-decoration:none" })
            </li>
            <li class="nav-link"><a href="javascript:document.getElementById('logoutForm').submit()" style="text-decoration:none;">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-link">@Html.ActionLink("Register", "Register", "Auth", routeValues: null, htmlAttributes: new { id = "nav_register_header" })</li>
        <li class="nav-link">@Html.ActionLink("Log in", "Login", "Auth", routeValues: null, htmlAttributes: new { id = "nav_login_header"})</li>
    </ul>
}
