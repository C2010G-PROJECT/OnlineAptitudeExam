<div class="row">
    <div class="col-lg-6">
        <!---------------------------------------------card 1---------------------------------------------------------------->
        <div class="card">
            <div class="card-header border-0">
                <div class="d-flex justify-content-between">
                    <h3 class="card-title m-0">Online Store Visitors</h3>
                    <!--<a href="javascript:void(0);">View Report</a>-->
                </div>
            </div>

            <div class="card-body">
                <div class="d-flex">
                    <p class="d-flex flex-column">
                        <span class="text-bold text-lg mr-2">820</span>
                        <span class="mr-2">Visitors Over Time</span>
                    </p>
                    <p class="ml-auto d-flex flex-column text-right">
                        <span class="text-success">
                            <i class="fas fa-arrow-up"></i> 7.5%
                        </span>
                        <span class="text-muted">Since last week</span>
                    </p>
                </div>
                <!-- /.d-flex -->

                <div class="position-relative mb-4">
                    <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                    <canvas id="scoreChart" height="150" width="291" class="chartjs-render-monitor" style="display: block; height: 200px; width: 389px;">
                    </canvas>
                </div>

                <div class="d-flex flex-row justify-content-end">
                    <span class="mr-2">
                        <i class="fas fa-square text-primary"></i> This Week
                    </span>

                    <span>
                        <i class="fas fa-square text-gray"></i> Last Week
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <!---------------------------------------------card 3---------------------------------------------------------------->
        <div class="card">
            <div class="card-header border-0">
                <div class="d-flex justify-content-between">
                    <h3 class="card-title m-0">Ratio pass/all</h3>
                    <!--<a href="javascript:void(0);">View Report</a>-->
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex">
                    <p class="d-flex flex-column">
                        <span class="text-bold text-lg mr-2">1832 Candidates</span>
                        <span class="mr-2">New candidate testing</span>
                    </p>
                    <p class="ml-auto d-flex flex-column text-right">
                        <span class="text-success">
                            <i class="fas fa-arrow-up"></i> 5.1%
                        </span>
                        <span class="text-muted">Since last month</span>
                    </p>
                </div>
                <!-- /.d-flex -->

                <div class="position-relative mb-4">
                    <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                    <canvas id="user-chart" height="150" style="display: block; height: 200px; width: 100%;" width="291" class="chartjs-render-monitor"></canvas>
                </div>

                <div class="d-flex flex-row justify-content-end">
                    <span class="mr-2">
                        <i class="fas fa-square text-primary"></i> This year
                    </span>

                    <span>
                        <i class="fas fa-square text-gray"></i> Last year
                    </span>
                </div>
            </div>
        </div>
        <!---------------------------------------------card 4---------------------------------------------------------------->

    </div>
</div>
<div class="row mt-3">
    <div class="col-lg-6">
        <!---------------------------------------------card 2---------------------------------------------------------------->

        <div class="card">
            <div class="card-header border-0 d-flex align-items-center">
                <h3 class="card-title m-0 flex-grow-1">Last examination candidate</h3>
                <div class="card-tools">
                    <a href="#" class="btn btn-tool btn-sm p-0">
                        <i class="fas fa-download"></i>
                    </a>
                    <a href="#" class="btn btn-tool btn-sm">
                        <i class="fas fa-bars"></i>
                    </a>
                </div>
            </div>
            @Html.Action("GetNewAccountTesting")
        </div>

    </div>
</div>

@if (ViewBag.isAjax != null && ViewBag.isAjax)
{
    Layout = null;
    <script>
        if (!window.DashboardIndex) {
            loadScripts('/Scripts/admin/Chart.min.js')
            loadScripts('/Scripts/admin/Dashboard.js')
        }
        loadScripts('DashboardIndex()', true)
    </script>
}

@section scripts {
    <script src="~/Scripts/admin/Chart.min.js"></script>
    <script src="~/Scripts/admin/Dashboard.js"></script>
    <script>DashboardIndex()</script>
}

