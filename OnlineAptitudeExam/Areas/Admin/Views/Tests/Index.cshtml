<div class="row flex-md-row flex-sm-column-reverse justify-content-between">
    <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
        <div class="input-group">
            <input id="searchTests" class="form-control form-control-sm " type="text" placeholder="Search" data-url="@Url.Action("GetData", "Tests")" data-param-key="search">
            <div class="input-group-append">
                <button class="btn btn-info" type="button">
                    <i class="mdi mdi-magnify"></i>
                </button>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-12 mb-3 d-flex justify-content-end">
        <button onclick="showTestsModal($(this), true, '@Url.Action("Create", "Tests")')" class="btn btn-success" type="button">
            <i class="mdi mdi-plus"></i>
        </button>
    </div>
</div>

<div id="contentTable">
    @Html.Action("GetData")
</div>

<div id="testsModal" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input class="form-control" data-val="true" id="Name" placeholder="Name" type="text">
                    <span class="field-validation-valid text-danger text-small" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary modal-submit">Submit</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/admin/TestsController.js"></script>
    <script>
        TestsIndex('@Url.Action("Index", "Tests")','@Url.Action("GetData", "Tests")');
    </script>
}
